#! /bin/bash

BRANCH=gt5-wuxi-krogoth
DEST=${HOME}/yocto-${BRANCH}

mkdir ${DEST}
cd ${DEST}

git clone https://github.com/ROJ-ITALY/sources.git -b $BRANCH
cd sources
git submodule init
git submodule update

mkdir base
cp -R roj-community-bsp-base/* base/
cp base/README ../README
cp base/setup-environment ../setup-environment

echo "Yocto environment created."
